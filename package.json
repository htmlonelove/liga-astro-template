{
  "name": "liga-project",
  "type": "module",
  "version": "3.0.0",
  "browserslist": [
    "last 3 versions",
    "IE 11",
    "Firefox ESR"
  ],
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev --host",
    "check": "astro check",
    "check:ts": "tsc --noEmit",
    "build": "npm run check && npm run check:ts && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "prepare": "husky",
    "lint:prettier": "prettier -w **/*.{js,jsx,ts,tsx,md,mdx,astro} --config .prettierrc.cjs",
    "lint:eslint": "eslint src/**/*.{js,ts,jsx,tsx,astro} --fix",
    "lint:stylelint": "stylelint **/*.scss --quiet-deprecation-warnings",
    "lint": "npm run lint:prettier & npm run lint:eslint & npm run lint:stylelint",
    "gen:component": "node ./util/component/gen-component.mjs",
    "gen:robots": "node ./util/create-robots-file.mjs",
    "images": "node ./util/images-optimize.mjs"
  },
  "dependencies": {
    "astro": "^4.16.13",
    "scroll-lock": "^2.1.5"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/ts-plugin": "^1.10.4",
    "@eslint/js": "^9.12.0",
    "@types/eslint__js": "^8.42.3",
    "@types/scroll-lock": "^2.1.3",
    "@typescript-eslint/parser": "^8.8.1",
    "astro-icon": "^1.1.1",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.3.0",
    "eslint": "^9.12.0",
    "eslint-plugin-astro": "^1.2.4",
    "eslint-plugin-jsdoc": "^50.3.1",
    "glob": "^11.0.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "inquirer": "^9.2.17",
    "inquirer-file-tree-selection-prompt": "^2.0.5",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.1",
    "sass": "^1.79.4",
    "sharp": "^0.33.5",
    "stylelint": "^16.1.0",
    "stylelint-config-htmlacademy": "^4.2.3",
    "stylelint-scss": "^6.0.0",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.1",
    "uppercamelcase": "^3.0.0",
    "vite-plugin-sass-glob-import": "^3.0.2"
  }
}
